@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .register-card {
        min-height: 600px;
        overflow: hidden;
    }
    .bg-register-image {
        background-image: url('https://images.unsplash.com/photo-1503387762-592deb58ef4e?q=80&w=1000&auto=format&fit=crop'); /* Imagen arquitectónica */
        background-size: cover;
        background-position: center;
    }
    .register-form-section {
        background-color: #ffffff;
    }
    .btn-modern {
        background-color: var(--primary-color);
        border: none;
        transition: all 0.3s ease;
    }
    .btn-modern:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            
            <div class="card shadow-lg border-0 rounded-4 register-card">
                <div class="row g-0 h-100">
                    
                    <div class="col-lg-6 d-none d-lg-block bg-register-image position-relative">
                        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.4);"></div>
                        <div class="position-absolute bottom-0 start-0 p-5 text-white">
                            <h2 class="fw-bold">Join Us Today</h2>
                            <p class="lead mb-0">Start managing your projects with efficiency and style.</p>
                        </div>
                    </div>

                    <div class="col-lg-6 d-flex align-items-center register-form-section">
                        <div class="card-body p-4 p-lg-5 text-black">

                            <div class="d-flex align-items-center mb-4 pb-1">
                                <span class="h2 fw-bold mb-0" style="color: var(--primary-color);">🏗️ Firmeza Admin</span>
                            </div>

                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create your new account</h5>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control form-control-lg rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email" class="text-muted">Email address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control form-control-lg rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="text-muted">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>

                                <div class="pt-1 mb-4">
                                    <button id="registerSubmit" type="submit" class="btn btn-modern btn-lg text-white w-100 rounded-3 py-3 fw-bold">
                                        REGISTER
                                    </button>
                                </div>

                                <p class="mb-5 pb-lg-2 text-muted small">
                                    Already have an account? 
                                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none" style="color: var(--secondary-color);">Log in here</a>
                                </p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}