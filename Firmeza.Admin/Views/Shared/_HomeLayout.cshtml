<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firmeza</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

<header>
    <partial name="_AdminTopbar" />
</header>

<main class="flex-grow-1 container py-5">
    @RenderBody()
</main>

<footer class="bg-light text-center text-muted py-4 mt-auto border-top">
    <div class="container">
        <span>&copy; 2025 <strong>Firmeza S.A.S</strong> - Soluciones en Construcci√≥n.</span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>