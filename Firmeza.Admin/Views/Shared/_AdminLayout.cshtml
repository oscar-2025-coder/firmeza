@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Firmeza Admin</title>

    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <!-- Optional site styles -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-body-tertiary">
<div class="d-flex">
    <!-- Sidebar -->
    <aside class="flex-shrink-0 bg-dark text-white min-vh-100" style="width: 260px;">
        <partial name="_AdminSidebar" />
    </aside>

    <!-- Main content -->
    <main class="flex-grow-1">
        <!-- Topbar -->
        <header class="bg-white border-bottom shadow-sm sticky-top">
            <partial name="_AdminTopbar" />
        </header>

        <!-- Page body -->
        <section class="container-fluid py-4">
            @RenderBody()
        </section>
    </main>
</div>

<!-- Bootstrap 5 (CDN) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

@* Optional per-view scripts *@
@RenderSection("Scripts", required: false)
</body>
</html>