@model Firmeza.Admin.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="text-center">
        <h1 class="text-danger display-5 mb-3">An unexpected error occurred.</h1>
        <p class="lead text-muted">
            Something went wrong while processing your request. Please try again later.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-secondary">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <hr class="my-4" />

        <h5 class="fw-semibold">Development Mode</h5>
        <p class="text-muted">
            Swapping to <strong>Development</strong> environment will display more detailed
            information about the error that occurred.
        </p>
        <p class="text-muted">
            <strong>Important:</strong> The Development environment should <em>never</em> be enabled
            for deployed applications, as it may expose sensitive information to users.
        </p>
        <p class="text-muted">
            For local debugging, set the
            <code>ASPNETCORE_ENVIRONMENT</code> variable to
            <strong>Development</strong> and restart the app.
        </p>
    </div>
</div>