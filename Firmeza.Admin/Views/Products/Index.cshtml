@model List<Firmeza.Admin.ViewModels.Products.ProductListItemViewModel>
@using Firmeza.Admin.ViewModels.Products
@{
    ViewData["Title"] = "Products";
    Layout = "_AdminLayout";
    var filter = (ProductFilterViewModel?)ViewData["Filter"] ?? new ProductFilterViewModel();
}

<h2 class="mb-3">Products</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label for="Q" class="form-label">Search</label>
        <input type="text" name="Q" id="Q" value="@filter.Q" class="form-control" placeholder="Name / SKU / Description" />
    </div>
    <div class="col-md-2">
        <label for="MinPrice" class="form-label">Min Price</label>
        <input type="number" step="0.01" name="MinPrice" id="MinPrice" value="@(filter.MinPrice?.ToString() ?? "")" class="form-control" />
    </div>
    <div class="col-md-2">
        <label for="MaxPrice" class="form-label">Max Price</label>
        <input type="number" step="0.01" name="MaxPrice" id="MaxPrice" value="@(filter.MaxPrice?.ToString() ?? "")" class="form-control" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="OnlyActive" id="OnlyActive" value="true" @(filter.OnlyActive == true ? "checked" : "") />
            <label class="form-check-label" for="OnlyActive">Only Active</label>
        </div>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<div class="mb-3">
    <a asp-controller="Products" asp-action="Create" class="btn btn-success">➕ Create Product</a>
    <a asp-controller="Products" asp-action="ExportToExcel" class="btn btn-outline-success ms-2">⬇️ Export to Excel</a>
    <a asp-controller="Products" asp-action="ExportToPdf" class="btn btn-outline-danger ms-2">⬇️ Export to PDF</a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>SKU</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Stock</th>
            <th>Status</th>
            <th class="text-end" style="width:160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No products found.</td>
            </tr>
        }
        else
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Sku</td>
                    <td class="text-end">@p.UnitPrice.ToString("C")</td>
                    <td class="text-end">@p.Stock</td>
                    <td>
                        @if (p.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
