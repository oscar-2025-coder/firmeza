@model Firmeza.Admin.ViewModels.Products.ProductFormViewModel

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    bool isDuplicate = Model.ExistingProductId.HasValue;
}

<div class="container-fluid mt-4">

    <h2 class="fw-bold mb-4" style="color: #2c3e50;">Create New Product</h2>


    @* ============================================================
       DUPLICATE SKU MESSAGE – SHOW ONLY THIS AND STOP FORM
       ============================================================ *@
    @if (isDuplicate)
    {
        <div class="alert alert-warning border-warning" role="alert">
            <h4 class="alert-heading">⚠️ Product Already Exists</h4>

            <p>@Model.DuplicateMessage</p>

            <hr />

            <p>
                A product with the same SKU already exists.
                You may edit it or return to the product list.
            </p>

            <div class="d-flex justify-content-end mt-3">
                <a asp-action="Edit"
                   asp-route-id="@Model.ExistingProductId"
                   class="btn btn-warning fw-bold me-2">
                    Edit Product
                </a>

                <a asp-action="Index" class="btn btn-outline-secondary fw-bold">
                    Back to List
                </a>
            </div>
        </div>

        @* STOP HERE — DO NOT RENDER THE FORM *@
        return;
    }


    @* ============================================================
       NORMAL CREATE FORM
       ============================================================ *@

    <div class="card shadow-sm border-0" style="max-width: 600px;">
        <div class="card-header bg-white pt-4 pb-3">
            <h5 class="card-title fw-bold text-dark mb-0">Product Details</h5>
        </div>
        <div class="card-body">

            <form asp-action="Create" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sku" class="form-label fw-bold"></label>
                    <input asp-for="Sku" class="form-control" />
                    <span asp-validation-for="Sku" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="UnitPrice" class="form-label fw-bold"></label>
                        <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Stock" class="form-label fw-bold"></label>
                        <input asp-for="Stock" class="form-control" type="number" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                </div>

                <div class="d-flex justify-content-end pt-3 border-top">
                    <button type="submit" class="btn text-white fw-bold shadow-sm"
                            style="background-color: #d35400;">
                        Create Product
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 fw-bold">
                        Back to List
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
