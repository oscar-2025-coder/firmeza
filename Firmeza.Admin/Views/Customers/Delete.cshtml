@model Firmeza.Admin.ViewModels.Customers.CustomerDeleteViewModel

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">

    <h2 class="mb-4 text-danger">Delete Customer</h2>

    <div class="alert alert-warning">
        <strong>Warning:</strong> You are about to delete this customer permanently.
    </div>

    <h4>Are you sure you want to delete this customer?</h4>

    <div class="mb-3">
        <label class="form-label fw-bold">Full Name:</label>
        <div>@Model.FullName</div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">
            Yes, delete this customer
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Cancel
        </a>
    </form>

</div>