@model Firmeza.Admin.ViewModels.Customers.CustomerDeleteViewModel

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">

    <h2 class="fw-bold mb-4" style="color: #c0392b;">
        Delete Customer
    </h2>

    <div class="card shadow-sm border-0 border-danger" style="max-width: 600px;">
        <div class="card-header bg-danger text-white py-3">
            <h5 class="card-title fw-bold mb-0">Confirm Deletion</h5>
        </div>

        <div class="card-body">

            @if (Model.HasRelatedSales)
            {
                <div class="alert alert-warning">
                    <strong>Warning:</strong>  
                    This customer has registered sales and cannot be deleted.
                </div>
            }

            <p class="mb-4 lead">
                <strong class="text-danger">Warning:</strong>
                This action cannot be undone.
            </p>

            <div class="mb-4 p-3 border rounded bg-light">
                <p class="mb-1 text-muted">Customer to delete:</p>
                <h4 class="fw-bold text-dark mb-0">@Model.FullName</h4>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end pt-3 border-top">
                    @if (!Model.HasRelatedSales)
                    {
                        <button type="submit" class="btn btn-danger fw-bold">
                            Yes, Delete Permanently
                        </button>
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 fw-bold">
                        Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>