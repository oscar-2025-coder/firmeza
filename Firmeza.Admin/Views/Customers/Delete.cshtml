@model Firmeza.Admin.ViewModels.Customers.CustomerDeleteViewModel

@{
    ViewData["Title"] = "Delete Customer";
    // 1. Asegurar el Layout del administrador
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">

    <h2 class="fw-bold mb-4" style="color: #c0392b;">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-trash-fill me-2" viewBox="0 0 16 16">
            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 3a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 4m3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0z"/>
        </svg>
        Delete Customer
    </h2>

    <div class="card shadow-sm border-0 border-danger" style="max-width: 600px;">
        <div class="card-header bg-danger text-white py-3">
            <h5 class="card-title fw-bold mb-0">Confirm Deletion</h5>
        </div>
        <div class="card-body">
            
            <p class="mb-4 lead">
                <strong class="text-danger">Warning:</strong> Are you sure you want to permanently delete this customer? This action cannot be undone.
            </p>

            <div class="mb-4 p-3 border rounded bg-light">
                <p class="mb-1 text-muted">Customer to delete:</p>
                <h4 class="fw-bold text-dark mb-0">@Model.FullName</h4>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end pt-3 border-top">
                    <button type="submit" class="btn btn-danger fw-bold shadow-sm d-flex align-items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                          <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                          <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                        Yes, Delete Permanently
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 fw-bold">
                        Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>