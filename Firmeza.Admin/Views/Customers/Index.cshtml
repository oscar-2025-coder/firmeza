@model IEnumerable<Firmeza.Admin.ViewModels.Customers.CustomerListItemViewModel>

@{
    ViewData["Title"] = "Customer List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // ðŸŽ¯ AÃ‘ADIDO: Bloque para leer y mostrar el mensaje de Ã©xito de TempData
    var successMessage = TempData["SuccessMessage"] as string;
}

<div class="container-fluid mt-4">

    @* ============================================= *@
    @* MOSTRAR MENSAJES DE TEMPDATA (Alerta de Ã‰xito) *@
    @* ============================================= *@
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <strong class="me-2">âœ… Success!</strong> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @* ============================================= *@

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0" style="color: #2c3e50;">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-people-fill me-2" viewBox="0 0 16 16">
              <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-9 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-1a1 1 0 0 0-1-1H3Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
            </svg>
            Customers
        </h2>

        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn text-white fw-bold shadow-sm d-flex align-items-center gap-2"
               style="background-color: #d35400; border: none;">
                <span class="fs-6">+</span> Create New Customer
            </a>

            <div class="btn-group">
                <a asp-action="ExportToExcel" class="btn btn-outline-success d-flex align-items-center gap-2" title="Export to Excel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-excel-fill" viewBox="0 0 16 16">
                      <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3H9.5a1 1 0 0 1-1-1zM5.884 6.68a.5.5 0 1 0-.768.64L7.349 10l-2.233 2.68a.5.5 0 0 0 .768.64L8 10.781l2.116 2.54a.5.5 0 0 0 .768-.641L8.651 10l2.233-2.68a.5.5 0 0 0-.768-.64L8 9.219l-2.116-2.54z"/>
                    </svg>
                    Excel
                </a>
                <a asp-action="ExportToPdf" class="btn btn-outline-danger d-flex align-items-center gap-2" title="Export to PDF">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-pdf-fill" viewBox="0 0 16 16">
                      <path d="M5.525 1.25H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.75L9.75 1.25H5.525zM9.75 3.5v-2L13.25 3.5h-3.5zm-2 9.474H6.12v-.969H7.1a.389.389 0 0 0 .082-.016.27.27 0 0 0 .044-.025c.0-.008.0-.01-.002-.01l-.022-.019a.186.186 0 0 1-.085-.044c-.02-.026-.041-.06-.062-.102l-.004-.009a.534.534 0 0 1-.03-.092c-.003-.012-.005-.022-.007-.033v-.636c.003-.01.006-.02.01-.032a.294.294 0 0 1 .056-.08.25.25 0 0 1 .075-.054c.003-.002.007-.003.012-.005h.693v-.735H6.12v1.734c0 .57.382.936.938.936h.046c.475 0 .823-.239.939-.773zm2.528 0h-.984V11.23h.914c.347 0 .652.128.73.344.08.22-.007.674-.52.674zm.399-.715c.427-.272.4-.95.123-1.16-.282-.25-.79-.228-1.123-.008v1.173h.85z"/>
                    </svg>
                    PDF
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3">Full Name</th>
                        <th>Document</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">@customer.FullName</td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @customer.DocumentNumber
                                </span>
                            </td>
                            <td>@customer.Email</td>
                            <td>@customer.PhoneNumber</td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@customer.Id"
                                   class="btn btn-sm btn-outline-primary border me-1" title="Edit Customer">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                      <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.105l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .105-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                    </svg>
                                </a>
                                <a asp-action="Delete" asp-route-id="@customer.Id"
                                   class="btn btn-sm btn-outline-danger border" title="Delete Customer">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                      <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>